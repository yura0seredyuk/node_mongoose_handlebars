<p>Edit Course</p>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" value="{{course.title}}" required>
    <label for="title">Edit course Name</label>
    <span class="helper-text" data-error="wrong name" data-success=""></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" name='price' class="validate" value="{{course.price}}" required min="1">
    <label for="price">Edit price</label>
    <span class="helper-text" data-error="wrong price" data-success=""></span>
  </div>

  <div class="input-field">
    <input id="img" type="text" name='img' class="validate" value="{{course.img}}" required>
    <label for="img">Edit IMG URL</label>
    <span class="helper-text" data-error="wrong img" data-success=""></span>
  </div>

  <input type="hidden" name='id' value="{{course._id}}">

  <button class="btn btn-primary" type="submit">Edit Course</button>

  <a href="/courses">To courses</a>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{ course._id }}">
  <button class="btn red">Delete course</button>
</form>
